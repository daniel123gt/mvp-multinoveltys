---
export interface Props {
	title: string;
	description?: string;
	lang?: 'es' | 'en';
}

const { title, description = "Multi Novelty's LLC - SENZA Hydrogen Technology | Power From Water", lang = 'es' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-senza-primary text-senza-accent font-sans overflow-x-hidden">
		<!-- Header -->
		<header class="fixed top-0 w-full z-50 bg-senza-primary/95 backdrop-blur-sm border-b border-senza-border shadow-sm">
			<nav class="max-w-6xl mx-auto px-8 py-6 flex items-center justify-between">
				<div class="flex items-center">
					<div class="w-28 h-14">
						<img src="/logo.svg" alt="Multi Novelty's LLC Logo" class="w-full h-full object-contain">
					</div>
				</div>
				<div class="hidden md:flex items-center space-x-12">
					<a href={lang === 'es' ? '/' : '/en'} class="text-senza-gray hover:text-senza-accent transition-colors text-sm font-medium">
						{lang === 'es' ? 'Inicio' : 'Home'}
					</a>
					<a href={lang === 'es' ? '/#producto' : '/en#product'} class="text-senza-gray hover:text-senza-accent transition-colors text-sm font-medium">
						{lang === 'es' ? 'Producto' : 'Product'}
					</a>
					<a href={lang === 'es' ? '/#tecnologia' : '/en#technology'} class="text-senza-gray hover:text-senza-accent transition-colors text-sm font-medium">
						{lang === 'es' ? 'Tecnología' : 'Technology'}
					</a>
					<a href={lang === 'es' ? '/#beneficios' : '/en#benefits'} class="text-senza-gray hover:text-senza-accent transition-colors text-sm font-medium">
						{lang === 'es' ? 'Beneficios' : 'Benefits'}
					</a>
				</div>
				<div class="flex items-center space-x-4">
					<a href={lang === 'es' ? '/buy' : '/comprar'} class="text-senza-gray hover:text-senza-accent transition-colors text-sm font-medium flex items-center">
						<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
						</svg>
						{lang === 'es' ? 'EN' : 'ES'}
					</a>
				</div>
			</nav>
		</header>

		<!-- Main Content -->
		<main>
			<slot />
		</main>

		<!-- Footer -->
		<footer id="contacto" class="bg-senza-secondary py-16">
			<div class="max-w-7xl mx-auto px-8">
				<div class="grid md:grid-cols-4 gap-8">
					<div class="col-span-2">
						<div class="flex items-center mb-6">
							<div class="w-32 h-16">
								<img src="/logo.svg" alt="Multi Novelty's LLC Logo" class="w-full h-full object-contain">
							</div>
						</div>
						<p class="text-senza-gray mb-6 max-w-md">
							{lang === 'es' 
								? "Empresa importadora líder en tecnología innovadora. Comercializamos SENZA, la revolucionaria tecnología de hidrógeno para automóviles."
								: "Leading importer company in innovative technology. We commercialize SENZA, the revolutionary hydrogen technology for automobiles."
							}
						</p>
					</div>

					<div>
						<h3 class="text-lg font-semibold text-senza-accent mb-4">
							{lang === 'es' ? 'Producto' : 'Product'}
						</h3>
						<ul class="space-y-2 text-senza-gray">
							<li><a href={lang === 'es' ? '/#producto' : '/en#product'} class="hover:text-senza-accent transition-colors">
								{lang === 'es' ? 'Características' : 'Features'}
							</a></li>
							<li><a href={lang === 'es' ? '/#tecnologia' : '/en#technology'} class="hover:text-senza-accent transition-colors">
								{lang === 'es' ? 'Tecnología' : 'Technology'}
							</a></li>
							<li><a href={lang === 'es' ? '/#beneficios' : '/en#benefits'} class="hover:text-senza-accent transition-colors">
								{lang === 'es' ? 'Beneficios' : 'Benefits'}
							</a></li>
						</ul>
					</div>

					<div>
						<h3 class="text-lg font-semibold text-senza-accent mb-4">
							{lang === 'es' ? 'Contacto' : 'Contact'}
						</h3>
						<ul class="space-y-2 text-senza-gray">
							<li class="break-all">contact@senzamultinoveltysllc.com</li>
							<li>Multi Novelty's LLC</li>
						</ul>
					</div>
				</div>

				<div class="border-t border-senza-border mt-12 pt-8 text-center text-senza-light-gray">
					<p>© 2025 Multi Novelty's LLC. {lang === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}</p>
				</div>
			</div>
		</footer>

		<!-- Form validation and submission script -->
		<script>
			// Form validation and submission
			const form = document.querySelector('form');
			if (form) {
				form.addEventListener('submit', function(e) {
					e.preventDefault();
					
					// Basic validation
					const requiredFields = document.querySelectorAll('[required]');
					let isValid = true;
					
					requiredFields.forEach(field => {
						if (!field.value.trim()) {
							isValid = false;
							field.classList.add('border-red-500');
						} else {
							field.classList.remove('border-red-500');
						}
					});
					
					if (isValid) {
						// Simulate form submission
						alert('¡Gracias por tu interés! Nos pondremos en contacto contigo pronto.');
						form.reset();
					} else {
						alert('Por favor completa todos los campos requeridos.');
					}
				});
			}

			// Smooth scrolling for anchor links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute('href'));
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});

			// Scroll-triggered animations
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -50px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.style.opacity = '1';
						entry.target.style.transform = 'translateY(0)';
					}
				});
			}, observerOptions);

			// Observe elements with animate-slide-up class
			document.querySelectorAll('.animate-slide-up').forEach(el => {
				el.style.opacity = '0';
				el.style.transform = 'translateY(30px)';
				el.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
				observer.observe(el);
			});
		</script>
	</body>
</html>

<style>
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-20px); }
	}
	
	.animate-float {
		animation: float 6s ease-in-out infinite;
	}
</style>
