				const powerName = power.toUpperCase() + ' Power';
				const engineRange = packageData[power as keyof typeof packageData];
				detailDisplay.textContent = `US ${packageName} - US ${powerName} (US ${engineRange.min}-US ${engineRange.max}L)`;
			} else {
				priceDisplay.textContent = 'US $0';
				detailDisplay.textContent = '';
			}
