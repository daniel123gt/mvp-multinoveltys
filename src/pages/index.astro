	<script>
		// Price Calculator
		const pricingData = {
			normal: {
				h: { min: 5.5, max: 6.0, price: 1990 },
				m: { min: 2.0, max: 2.5, price: 1850 },
				l: { min: 1.0, max: 1.8, price: 1650 }
			},
			allinone: {
				h: { min: 5.5, max: 6.0, price: 2150 },
				m: { min: 2.0, max: 2.5, price: 1900 },
				l: { min: 1.0, max: 1.8, price: 1780 }
			}
		};

		function calculatePrice() {
			const engineSize = parseFloat((document.getElementById('engineSize') as HTMLInputElement)?.value || '0');
			const packageType = (document.getElementById('packageType') as HTMLSelectElement)?.value || 'normal';
			const priceDisplay = document.getElementById('calculatedPrice') as HTMLElement;

			if (!engineSize || !packageType) {
				priceDisplay.textContent = 'US $0';
				priceDisplay.classList.remove('text-senza-light-blue', 'text-senza-blue');
				return;
			}

			const packageData = pricingData[packageType as keyof typeof pricingData];
			let selectedPower = null;

			// Determine power level based on engine size
			if (engineSize >= 5.5 && engineSize <= 6.0) {
				selectedPower = 'h';
			} else if (engineSize >= 2.0 && engineSize <= 2.5) {
				selectedPower = 'm';
			} else if (engineSize >= 1.0 && engineSize <= 1.8) {
				selectedPower = 'l';
			}

			if (selectedPower && packageData && packageData[selectedPower as keyof typeof packageData]) {
				const price = packageData[selectedPower as keyof typeof packageData].price;
				priceDisplay.textContent = `US $US ${price.toLocaleString()}`;
				priceDisplay.classList.add('text-senza-light-blue');
				priceDisplay.classList.remove('text-senza-blue');
			} else {
				priceDisplay.textContent = 'No disponible';
				priceDisplay.classList.add('text-senza-blue');
				priceDisplay.classList.remove('text-senza-light-blue');
			}
		}

		document.addEventListener('DOMContentLoaded', function() {
			const calculateBtn = document.getElementById('calculateBtn');
			const engineSizeInput = document.getElementById('engineSize');
			const packageTypeSelect = document.getElementById('packageType');

			if (calculateBtn) {
				calculateBtn.addEventListener('click', calculatePrice);
			}

			// Auto-calculate when inputs change
			if (engineSizeInput) {
				engineSizeInput.addEventListener('input', calculatePrice);
			}

			if (packageTypeSelect) {
				packageTypeSelect.addEventListener('change', calculatePrice);
			}
		});
	</script>
